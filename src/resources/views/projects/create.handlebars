{{> header}}
<div class="container content-body">
    <h2 style="margin-bottom: 24px;">Thêm project</h2>
    <form method="POST" action="/projects/saved" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-project col-md-6">
                <label for="inputEmail4">Tên dự án</label>
                <input name="name" id="name" type="text" class="form-control" required>
            </div>
        </div>
        <div class="form-row">
            <div class="form-project col-md-12">
                <label for="description">Mô tả</label>
                <textarea name="description" id="description" class="form-control">{{project.description}}</textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="image">Ảnh</label>
                <input name="image" id="image" type="file" class="form-control">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>